<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_child"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Leave a comment"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/z_input_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/z_edit_text_border"
        android:gravity="left"
        android:hint="write something down..."
        android:maxLines="6"
        android:minLines="6"
        android:padding="8dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/z_btn_comment_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="31dp"
            android:layout_weight="1"
            android:text="cancel" />

        <Button
            android:id="@+id/z_btn_comment_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="send" />
    </LinearLayout>

</LinearLayout>