<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_login_background"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/z_linearlayout_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_textview_login"
        android:background="@drawable/z_item_storylist_bg_normal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            android:text="USERNAME"
            android:textColor="@color/z_login_foreground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/z_input_login_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/z_login_input_bg"
            android:hint="lovely name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="PASSWORD"
            android:textColor="@color/z_login_foreground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/z_input_login_psw"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/z_login_input_bg"
            android:hint="your little secret"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/action_sign_in"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/register_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/register_button"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/z_textview_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-18dp"
        android:layout_marginLeft="16dp"
        android:text="LOGIN"
        android:textColor="@color/z_login_foreground"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/z_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_linearlayout_login_input"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="-24dp"
        android:height="48dp"
        android:background="@drawable/z_login_btn_riple"
        android:text="LOGIN"
        android:textColor="@color/white_child"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/z_fab_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/z_login_foreground"
        android:src="@drawable/ic_person_add_24dp"
        app:borderWidth="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_btn_login"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="FORGET PASSWORD?"
        android:textStyle="bold" />


</RelativeLayout>
