<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_login_background"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/z_linearlayout_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_textview_login"
        android:background="@drawable/z_item_storylist_bg_normal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            android:text="USERNAME"
            android:textColor="@color/z_login_foreground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/z_login_input_bg"
            android:hint="lovely name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="PASSWORD"
            android:textColor="@color/z_login_foreground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/z_login_input_bg"
            android:hint="your little secret" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="NICKNAME"
            android:textColor="@color/z_login_foreground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/z_login_input_bg"
            android:hint="it's funny" />
    </LinearLayout>

    <TextView
        android:id="@+id/z_textview_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="SIGN UP"
        android:textColor="@color/z_login_foreground"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/z_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_linearlayout_login_input"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="-24dp"
        android:height="48dp"
        android:background="@drawable/z_login_btn_riple"
        android:text="SIGN UP"
        android:textColor="@color/white_child"
        android:textSize="16sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar_1"
        app:civ_border_color="@color/z_login_foreground"
        app:civ_border_width="1.5dp" />

</RelativeLayout>
