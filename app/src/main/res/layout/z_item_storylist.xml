<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/z_item_storylist_selector">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/applicants_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/avatar_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/z_release_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超市伊利牛奶促销"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/z_release_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="100元/天"
                android:textColor="#ff7214" />

            <TextView
                android:id="@+id/z_release_paytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日结" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/z_release_hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="街道口"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/z_release_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/09/30-2017/10/15"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


